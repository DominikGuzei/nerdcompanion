


<ul id="guide-list">
  
  <% if guides.empty? %>
    <p class="no-guides">No guides found for this list.</p>
  <% end %>
  
  <% guides.each do |guide| %> 
  
    <li class="guide clearfix">
      <%= link_to guide.title, guide, :class => 'title' %>
      
      <span class="meta">
        Written by <%= link_to guide.user.name, user_path( guide.user ) %>
        on <%= l(guide.created_at, :format=>:guide_list) %>
      </span>
      
      <p><%= guide.description %></p>
      
      <% if current_user_is_guide_owner?(guide) %>
        <div class="menu">
          <%= link_to "Edit", edit_guide_path(guide), :class => "edit" %>
          <%= link_to "Delete", guide_path(guide), :class => "delete", :method => :delete %>
        </div>
      <% end %>
      
    </li>
    
  <% end %>
</ul>