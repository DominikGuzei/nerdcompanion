
<div id="feature">
  <div class="wrapper">
    
    <h2 id="guide-title"><%= @guide.title %></h2>
    <p><%= @guide.description %></p>
    
  </div>
</div>

<div id="container">
  <div class="wrapper">
    
    <div id="mainCol">
      
      <% @guide.blocks.each do |block| %>
        
        <% case block.type
             when "paragraph" %>
             
              <p><%= sanitize block.content, :tags => %w(span strong italic ul ol li), :attributes => %w(style) %></p>
          
          <% when "h1" %>
            <h3><%= block.content %></h3>
            
          <% when "h2" %>
            <h3><%= block.content %></h3>
            
        <% end %>
        
      <% end %>
      
		</div>
		
  </div>
</div>
